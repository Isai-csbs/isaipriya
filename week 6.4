def find_pivot_index(arr):
    total_sum = sum(arr)
    left_sum = 0
    for i in range(len(arr)):
        total_sum -= arr[i]
        if left_sum == total_sum:
            return i
        left_sum += arr[i]
    return -1  # If no pivot found

# Input
n = int(input())
arr = [int(input()) for _ in range(n)]

# Output
print(find_pivot_index(arr))
